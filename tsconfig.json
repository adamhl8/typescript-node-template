{
  "include": ["src"],

  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "NodeNext",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true
  },

  "ts-node": {
    "esm": true,
    "swc": true
  }
}
